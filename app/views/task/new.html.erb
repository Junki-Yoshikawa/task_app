<h1><%= ta_t("title") %></h1>
<%= form_for @task, url: task_index_path do |f| %>

  <% if @task.errors.any? %>
    <div style="color: red">
      <ul>
        <% @task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, ta_t("form.title"), style: "display: block" %>
    <%= f.text_field :title, reqired: true%>
  </div>

  <div class="field">
    <%= f.label :description, ta_t("form.description"), style: "display: block" %>
    <%= f.text_area  :description %>
  </div>

  <div class="field">
    <%= f.label :ended_at, ta_t("form.ended_at"), style: "display: block" %>
    <%= f.date_field :ended_at %>
  </div>

  <div class="field">
    <%= f.label :status, ta_t("form.status"), style: "display: block" %>
    <%= f.select :status, Task.statuses.keys.map {|k| [I18n.t("enums.task.status.#{k}"), k]} %>
  </div>

  <div class="actions">
    <%= f.submit ta_t("form.submit") %>
  </div>

<% end %>

<%= link_to ta_t("form.back"), task_index_path %>
