<h1>タスク一覧</h1>
<%= button_to '新規作成', new_task_path, method: :get %>
<div>
  <table style="width: 100%">
    <thead>
      <tr>
      <th>#</th><th>登録日</th><th>タイトル</th><th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |r| %>
      <tr>
        <td style="text-align: center;"><%= r.task_no %></td>
        <td><%= l(r.created_at) %></td>
        <td><%= link_to r.title, task_path(r.task_no) %></td>
        <td style="text-align: center;">
        <div style="
          display: flex;
          flex-direction: row;
          flex-wrap: nowrap;
          justify-content: space-evenly;
          align-items: center;"
        >
          <%= button_to '編集', edit_task_path(r.task_no), method: :get %>
          <%= button_to '削除', task_path(r.task_no), method: :delete %>
        </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= notice %>