<h1>タスク一覧</h1>
<%= button_to '新規作成', new_task_path, method: :get %>
<div>
  <table style="width: 100%">
    <thead>
      <tr>
      <th class="w-no">#</th>
      <th class="w-created-at">登録日</th>
      <th>タイトル</th>
      <th class="w-button">操作</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |r| %>
      <tr>
        <td class="text-center"><%= r.id %></td>
        <td><%= l(r.created_at) %></td>
        <td><%= link_to r.title, task_path(r.id) %></td>
        <td class="text-center">
        <div class="btn-group">
          <%= button_to '編集', edit_task_path(r.id), method: :get %>
          <%= button_to '削除', task_path(r.id), method: :delete %>
        </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= notice %>