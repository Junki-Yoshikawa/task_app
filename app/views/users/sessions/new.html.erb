<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "card col-6 mt-5 mx-auto"}) do |f| %>
<div class="card-header">
  <h2 class="text-center" ><%= ta_t("title") %></h2>
</div>
<div class="card-body">
  <div class="row mb-3">
    <%= f.label :email, ta_t("form.email"), class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :password, ta_t("form.password"), class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.password_field :password, reqired: true, autocomplete: "current-password", class: "form-control" %>
      <% if devise_mapping.rememberable? %>
      <div class="mb-3 form-check text-left">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, ta_t("form.remember_me"), class: "form-check-label" %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row mb-3 text-center">
    <div class="col-12">
      <%= f.submit ta_t("form.submit"), class: "btn btn-primary py-2 px-5" %>
    </div>
  </div>
  <div class="row mb-3 text-center">
    <%= render "users/shared/links" %>
  </div>
</div>
<% end %>
