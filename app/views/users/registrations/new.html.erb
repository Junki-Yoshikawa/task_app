<%= form_for(resource, as: resource_name, url: user_registration_path, html: {class: "card col-6 mt-5 mx-auto"}) do |f| %>
  <div class="card-header">
    <h2 class="text-center" ><%= ta_t("title") %></h2>
  </div>
  <div class="card-body">
    <div class="row mb-3">
      <%= f.label :name, ta_t("form.name"), class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :name, reqired: true, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :email, ta_t("form.email"), class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.email_field :email, reqired: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :password, ta_t("form.password"), class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.password_field :password, reqired: true, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :password_confirmation, ta_t("form.password_confirmation"), class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.password_field :password_confirmation, reqired: true, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3 text-center">
      <div class="col-12">
        <%= f.submit ta_t("form.submit"), class: "btn btn-primary py-2 px-5" %>
      </div>
    </div>
    <%= render "users/shared/error_messages", resource: resource %>
  </div>
<% end %>


